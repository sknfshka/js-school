div.filter-form
  div.form-item
    label.form-item__label(for="year-from-filter") Год от
    input.form-item__input(id="year-from-filter", type="text", name="year-from") 

  div.form-item
    label.form-item__label(for="year-until-filter") до
    input.form-item__input(id="year-until-filter", type="text", name="year-until") 

  div.form-item
    label.form-item__label(for="title-filter") Название
    input.form-item__input(id="title-filter", type="text", name="title") 

  div.form-item
    label.form-item__label(for="rating-filter") Рейтинг
    div.form-item__range
        div.form-item__range__rating-value(id = "rating-value") 0
        input.form-item__range__range-slider(id="rating-filter", type="range", name="rating", min="0", max="10", value="0")
        div.form-item__range__rating-value 10
  
  div.form-item
    label.form-item__label(for="category-filter") Категория
    select.form-item__input(id="category-filter", name="category")
      option(value="Все") Все
      option(value="Комедия") Комедия
      option(value="Боевик") Боевик
      option(value="Ужасы") Ужасы
    i.form-item__select-arrow

  div.form-item
    label.form-item__label(for="sort-by") Сортировать по
    select.form-item__input(id="sort-by", name="sort")
      option(value="title") Название
      option(value="latest") Последние
      option(value="best") Лучшие
    i.form-item__select-arrow